@model NZWalks.UI.Models.DTO.RegionDto

<h1 class="mt-3">Edit Region</h1>

@if(Model is not null)
{
    <form method="post">
        <div clas="mt-3">
            <lable class="form-label">Id</lable>
            <input type="text" class="form-control" asp-for="Id" readonly />

        </div>
        <div clas="mt-3">
            <lable class="form-label">Code</lable>
            <input type="text" class="form-control" asp-for="Code" />

        </div>
        <div clas="mt-3">
            <lable class="form-label">Name</lable>
            <input type="text" class="form-control" asp-for="Name" />

        </div>
        <div clas="mt-3">
            <lable class="form-label">Image-Url</lable>
            <input type="text" class="form-control" asp-for="RegionImageurl" />

        </div>
        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <button asp-controller="Regions" asp-action="Delete" type="submit" class="btn btn-danger">Delete</button>
        </div>
    </form>
}