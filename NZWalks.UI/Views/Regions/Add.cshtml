@model NZWalks.UI.Models.AddRegionViewModel
<h1 class="mt-3">Add Region</h1>

<form method="post">
    <div clas="mt-3">
        <lable class="form-label">Code</lable>
        <input type="text" class="form-control" asp-for="Code" />

    </div>
    <div clas="mt-3">
        <lable class="form-label">Name</lable>
        <input type="text" class="form-control" asp-for="Name" />

    </div>
    <div clas="mt-3">
        <lable class="form-label">Image-Url</lable>
        <input type="text" class="form-control" asp-for="RegionImageurl" />

    </div>
    <div class="mt-3">
      <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>